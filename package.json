{
  "name": "moosic",
  "version": "1.9.0",
  "description": "A simple futuristic music app that combines the infinite catalog of songs from youtube in a simple application",
  "main": "./dist/index.js",
  "author": "Mart van Enckevort <marvanenck@gmail.com>",
  "homepage": "https://martvenck.com/Moosic",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mart100/Moosic.git"
  },
  "license": "ISC",
  "dependencies": {
    "browserify": "^17.0.0",
    "common-js": "^0.3.8",
    "discord-rich-presence": "0.0.8",
    "discord-rpc": "^3.1.4",
    "electron-log": "^4.2.4",
    "electron-prompt": "^1.6.0",
    "electron-updater": "^4.3.5",
    "express": "^4.17.1",
    "file-saver": "^2.0.2",
    "firebase": "^8.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^9.0.1",
    "genius-api": "^0.4.1",
    "get-folder-size": "^2.0.1",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "node-ipc": "^9.1.1",
    "npm-check-updates": "^9.2.3",
    "open": "^7.3.0",
    "socket.io": "^2.3.0",
    "spotify-web-api-js": "^1.5.0",
    "v8-compile-cache": "^2.2.0",
    "wget-improved": "^3.2.1",
    "yargs": "^16.1.0",
    "ytdl-core": "^4.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.2",
    "@types/jquery": "^3.5.4",
    "@types/yargs": "^15.0.9",
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0"
  },
  "scripts": {
    "start": "npm run compile && concurrently \"electron .\" \"npm run compile:watch\"",
    "fstart": "npm run compile && electron .",
    "compile:watch": "concurrently \"npm run tsc:w\" \"npm run sass:w\" \"npm run assets:w\"",
    "compile": "npm install && npm run assets && npm run tsc-scripts && npm run tsc && npm run sass",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "tsc-scripts": "tsc -p scripts",
    "tsc-scripts:w": "tsc -w -p scripts",
    "sass": "sass src/styles:dist/src/styles",
    "sass:w": "sass --watch src/styles:dist/src/styles",
    "assets": "cpx \"src/**/*.{html,png,jpg}\" dist/src",
    "assets:w": "cpx \"src/**/*.{html,png,jpg}\" dist/src --watch",
    "copy_src_to_compiled": "node copy_src_to_compiled.js",
    "compileSCSS": "sass src/styles:dist/src/styles",
    "dist": "npm run compile && electron-builder build",
    "publish": "npm run compile && electron-builder build -p always",
    "postinstall": "electron-builder install-app-deps",
    "registerNativeMessageHostChrome": "REG ADD \"HKCU\\Software\\Google\\Chrome\\NativeMessagingHosts\\com.midoxus.moosic\" /ve /t REG_SZ /d \"H:\\Programming\\Electron\\Moosic\\com.midoxus.moosic.json\" /f",
    "registerNativeMessageHostFirefox": "REG ADD \"HKCU\\Software\\Mozilla\\NativeMessagingHosts\\com.midoxus.moosic\" /ve /t REG_SZ /d \"H:\\Programming\\Electron\\Moosic\\com.midoxus.moosic.json\" /f"
  },
  "bin": {
    "moosic": "dist/CLI.js"
  },
  "build": {
    "appId": "com.midoxus.moosic",
    "publish": [
      {
        "provider": "github",
        "owner": "Mart100",
        "repo": "Moosic",
        "publishAutoUpdate": false
      }
    ],
    "win": {
      "files": [
        "!**/src/storage/*",
        "!**/dist/src/storage/*"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
