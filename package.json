{
  "name": "moosic",
  "version": "1.6.6",
  "description": "A simple futuristic music app that combines the infinite catalog of songs from youtube in a simple application",
  "main": "./compiled/index.js",
  "author": "Mart van Enckevort <marvanenck@gmail.com>",
  "homepage": "https://martve.me/Moosic",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mart100/Moosic.git"
  },
  "license": "ISC",
  "dependencies": {
    "browserify": "^16.5.0",
    "common-js": "^0.3.8",
    "discord-rich-presence": "0.0.8",
    "discord-rpc": "^3.1.0",
    "electron-log": "^3.0.8",
    "electron-prompt": "^1.4.0",
    "electron-updater": "^4.1.2",
    "file-saver": "^2.0.2",
    "fs-extra": "^8.1.0",
    "get-folder-size": "^2.0.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "node-ipc": "^9.1.1",
    "open": "^6.4.0",
    "spotify-web-api-js": "^1.2.0",
    "v8-compile-cache": "^2.1.0",
    "wget-improved": "^3.0.2",
    "yargs": "^14.2.0",
    "ytdl-core": "^1.0.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/jquery": "^3.3.31",
    "@types/yargs": "^13.0.3",
    "electron": "^6.0.3",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.5.0"
  },
  "scripts": {
    "start": "npm install && npm run compileWatch && electron .",
    "fstart": "npm run compile && electron .",
    "compileWatch": "npm run copy_src_to_compiled && Start tsc -w && Start sass --watch src/styles:compiled/src/styles",
    "compile": "npm run copy_src_to_compiled && tsc && sass src/styles:compiled/src/styles",
    "copy_src_to_compiled": "node copy_src_to_compiled.js",
    "compileSCSS": "sass src/styles:compiled/src/styles",
    "dist": "npm run compile && electron-builder build",
    "publish": "npm run compile && electron-builder build -p always",
    "postinstall": "electron-builder install-app-deps",
    "registerNativeMessageHostChrome": "REG ADD \"HKCU\\Software\\Google\\Chrome\\NativeMessagingHosts\\com.midoxus.moosic\" /ve /t REG_SZ /d \"H:\\Programming\\Electron\\Moosic\\com.midoxus.moosic.json\" /f",
    "registerNativeMessageHostFirefox": "REG ADD \"HKCU\\Software\\Mozilla\\NativeMessagingHosts\\com.midoxus.moosic\" /ve /t REG_SZ /d \"H:\\Programming\\Electron\\Moosic\\com.midoxus.moosic.json\" /f"
  },
  "bin": {
    "moosic": "compiled/CLI.js"
  },
  "build": {
    "appId": "com.midoxus.moosic",
    "publish": [
      {
        "provider": "github",
        "owner": "Mart100",
        "repo": "Moosic",
        "publishAutoUpdate": false
      }
    ],
    "win": {
      "files": [
        "!**/src/storage/*",
        "!**/compiled/src/storage/*"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
