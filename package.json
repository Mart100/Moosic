{
  "name": "moosic",
  "version": "1.2.4",
  "description": "A simple futuristic music app that combines the infinite catalog of songs from youtube in a simple application",
  "main": "./compiled/index.js",
  "author": "Mart van Enckevort <marvanenck@gmail.com>",
  "homepage": "https://martve.me/Moosic",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mart100/Moosic.git"
  },
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^4.1.2",
    "file-saver": "^2.0.2",
    "fs-extra": "^8.1.0",
    "get-folder-size": "^2.0.1",
    "jquery": "^3.4.1",
    "open": "^6.4.0",
    "spotify-web-api-js": "^1.2.0",
    "v8-compile-cache": "^2.1.0",
    "ytdl-core": "^0.29.5"
  },
  "devDependencies": {
    "electron": "^6.0.3",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.5.0"
  },
  "scripts": {
    "start": "npm install && npm run copy_src_to_compiled && npm run compile && electron .",
    "compile": "Start tsc -w",
    "copy_src_to_compiled": "node copy_src_to_compiled.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "publish": "electron-builder build -p always"
  },
  "build": {
    "appId": "com.moosic.app",
    "publish": [
      {
        "provider": "github",
        "owner": "Mart100",
        "repo": "Moosic"
      }
    ],
    "win": {
      "files": [
        "!src/storage/*"
      ]
    }
  }
}
